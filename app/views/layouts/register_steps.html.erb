    <%= render 'shared/head' %>
  </head>
  <body class="bg-gray-200">
    <header class="w-full bg-white border-b md:h-20 dark:bg-gray-900 dark:border-gray-700" x-data="{ mobileMenuOpen : false }">
      <nav class="py-3 px-4 mx-auto space-y-4 max-w-screen-2xl md:flex md:justify-between md:items-center md:py-5 md:space-y-0 md:space-x-10">
        <%= render "shared/logo" %>
