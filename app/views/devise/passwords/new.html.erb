<section class="flex flex-col items-center min-h-screen md:flex-row">
  <div class="flex flex-wrap content-between w-full min-h-screen px-6 pt-2 bg-white md:mx-auto md:w-1/2 md:max-w-md lg:px-16 lg:max-w-full xl:px-12">
    <%= render "shared/logo" %>
    <div class="w-full pb-4 h-100">
      <h1 class="mt-12 text-xl font-bold leading-tight text-center md:text-2xl">Forgot your password?</h1>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="pb-4">
          <%= f.email_field :email, autofocus: true, placeholder: "Email Address", autocomplete: "email", class: "w-full px-4 py-3 rounded-lg mt-2 border focus:border-gray-500 focus:outline-none autofill:bg-white" %>
        </div>
        <div class="actions">
          <%= f.submit "Send me reset password instructions", class: "border border-blue-500 text-white bg-blue-500 hover:bg-blue-700 hover:text-white px-4 py-2 rounded-md text-sm font-medium" %>
        </div>
      <% end %>
    </div>
    <div class="py-2 mb-8 border-t border-t-gray-200">
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <p class="text-normal">Don't have an account? <%= link_to "Sign up!", new_registration_path(resource_name), class: "text-blue-500" %></p>
      <% end %>
      <%- if controller_name != 'sessions' %>
        <p class="text-normal">Already have an account? <%= link_to "Log in", new_session_path(resource_name), class: "text-blue-500"  %></p>
      <% end %>
    </div>
  </div>
  <div class="hidden w-auto min-h-screen bg-gray-600 bg-no-repeat bg-cover md:w-1/2 lg:block" style="background-image: url(<%= image_url "bg/bg-01.jpg" %>); background-position: center top;">
  </div>
</section>
