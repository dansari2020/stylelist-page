<div class="font-sans min-h-screen antialiased bg-gray-100 pt-24 pb-5">
  <header class="bg-white border-b dark:bg-gray-900 dark:border-gray-700 lg:fixed lg:w-full lg:top-0 lg:left-0 lg:z-40" x-data="{ mobileMenuOpen : false }">
    <nav class="container py-2 px-6">
      <%= render "shared/logo" %>
    </nav>
  </header>
  <div class="w-screen flex flex-col justify-center sm:w-96 sm:m-auto mx-5 mb-5 space-y-8">
    <div class="flex flex-col bg-white p-4 shadow space-y-6">
      <div class="">
        <h1 class="text-xl md:text-2xl font-bold leading-tight mt-8 text-center">Create Your Account</h1>
        <p class="text-sm text-center">Step 1 of 4</p>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="flex flex-col md:flex-row space-x-4">
          <div class="md:w-1/2 mb-6">
            <%= f.text_field :first_name, autofocus: true, placeholder: "First Name", autocomplete: "first_name", class: "w-full px-4 py-3 rounded-lg mt-2 border focus:border-gray-500 focus:outline-none autofill:bg-white" %>
          </div>
          <div class="md:w-1/2 mb-6">
            <%= f.text_field :last_name, placeholder: "Last Name", autocomplete: "last_name", class: "w-full px-4 py-3 rounded-lg mt-2 border focus:border-gray-500 focus:outline-none autofill:bg-white" %>
          </div>
        </div>
        <div class="mb-4">
          <%= f.email_field :email, placeholder: "Email Address", autocomplete: "email", class: "w-full px-4 py-3 rounded-lg mt-2 border focus:border-gray-500 focus:outline-none autofill:bg-white" %>
          <p class="text-xs text-gray-400 py-2">This email will be used to sign in</p>
        </div>
        <div class="mb-2">
          <%= f.password_field :password, placeholder: "Password", autocomplete: "new-password", class: "w-full px-4 py-3 rounded-lg mt-2 border focus:border-gray-500 focus:outline-none autofill:bg-white" %>
        </div>
        <div class="mb-4">
          <%= f.password_field :password_confirmation, placeholder: "Confirm Password", autocomplete: "new-password", class: "w-full px-4 py-3 rounded-lg mt-2 border focus:border-gray-500 focus:outline-none autofill:bg-white" %>
          <p class="text-xs text-gray-400 py-2">Use 8 or more characters with a mix of letters & numbers</p>
        </div>
        <div class="actions w-full flex justify-between mt-12">
          <div class="w-1/2">
            <p class="text-xs text-gray-400 text-justify">By clicking Sign Up you agree to our <%= link_to "Terms", "#", class: "text-blue-500" %> and <%= link_to "Services", "#",class: "text-blue-500" %></p>
          </div>
          <div class="w-1/2 text-right">
            <%= f.submit "Sign up", class: "text-black lg:bg-yellow-200 hover:bg-yellow-500 lg:px-4 py-2 rounded-md text-sm font-medium" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
