<div class="flex flex-col justify-center">
  <div class="flex flex-col p-4">
    <h1 class="mb-2 font-bold leading-tight text-md">Change Email</h1>
    <p class="text-sm text-gray-500">Enter your new email address and current password</p>
    <div class="mb-4">
      <%= f.email_field :email, placeholder: "Email Address", autocomplete: "email", class: "w-full px-4 py-3 rounded-lg mt-2 border focus:border-gray-500 focus:outline-none autofill:bg-white", ":disabled": "submenu !== 'update_email'" %>
      <p class="py-2 text-xs text-gray-500">This email will be used to sign in</p>
    </div>
    <div class="mb-2">
      <%= f.password_field :current_password, placeholder: "Current Password", autocomplete: "password", class: "w-full px-4 py-3 rounded-lg mt-2 border focus:border-gray-500 focus:outline-none autofill:bg-white", ":disabled": "submenu !== 'update_email'" %>
    </div>
    <p class="text-sm text-gray-500">We need your current password to verify this update</p>
  </div>
</div>
<input type="hidden" name="from_url" value="<%= settings_path(tab: "manage_account", submenu: "update_email") %>" :disabled="submenu !== 'update_email'">
