<div class="flex flex-col justify-center items-center w-screen h-screen md:flex-row">
  <div class="text-center">
    <h1 class="mb-24 font-bold text-md">Re-Active Your account</h1>
    <p class="mb-24 text-sm">Your account has been disabled for violation our terms. You can confrim re-active your active. </p>
    <%= form_for(current_user, url: profile_users_path, html: { method: :put }) do |f| %>
      <%= f.hidden_field :status, value: "completed" %>
      <div class="actions">
        <%= f.submit "Re-Active", class: "border border-blue-500 text-white bg-blue-500 hover:bg-blue-700 hover:text-white px-4 py-2 rounded-md text-sm font-medium" %>
      </div>
    <% end %>
  </div>
</div>
