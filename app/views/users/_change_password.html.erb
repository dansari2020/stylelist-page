<div class="flex flex-col justify-center">
  <div class="flex flex-col p-4">
    <h1 class="mb-2 font-bold leading-tight text-md">Change Password</h1>
    <p class="text-sm text-gray-400">You will receive an email about this change</p>
    <div class="mb-2">
      <%= f.password_field :current_password, placeholder: "Current Password", autocomplete: "password", class: "w-full px-4 py-3 rounded-lg mt-2 border focus:border-gray-500 focus:outline-none autofill:bg-white", ":disabled": "submenu !== 'change_password'" %>
      <p class="text-sm text-gray-400">Password that you currently use</p>
    </div>
    <div class="mb-2">
      <%= f.password_field :password, placeholder: "Create New Password", class: "w-full px-4 py-3 rounded-lg mt-2 border focus:border-gray-500 focus:outline-none autofill:bg-white", ":disabled": "submenu !== 'change_password'" %>
    </div>
    <div class="mb-2">
      <%= f.password_field :password_confirmation, placeholder: "Confirm New Password", class: "w-full px-4 py-3 rounded-lg mt-2 border focus:border-gray-500 focus:outline-none autofill:bg-white", ":disabled": "submenu !== 'change_password'" %>
      <p class="text-sm text-gray-400">Use 8 or more characters with a mix of letters & numbers</p>
    </div>
  </div>
</div>
<input type="hidden" name="from_url" value="<%= settings_path(tab: "manage_account", submenu: "change_password") %>">
