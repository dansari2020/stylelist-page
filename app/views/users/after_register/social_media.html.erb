<div class="pb-10">
  <h1 class="mt-8 font-bold text-normal">Link your social media accounts</h1>
</div>
<%= form_for(@user, :url => wizard_path, :method => :put) do |f| %>
  <%= render "devise/shared/error_messages", resource: @user %>
  <% @social_data = SocialMedium.kinds.keys.map{|k| @user.social_media.find_or_initialize_by(kind: k) }%>
  <%= f.fields_for :social_media, @social_media  do |social_form| %>
    <div class="flex flex-col w-full px-4 mb-3 border rounded-lg md:flex-row md:inline-flex md:items-center focus:border-gray-500 focus:outline-none">
      <%= image_tag "icons/#{social_form.object.kind}.png", class: "w-5" %>
      <%= social_form.text_field :url, placeholder: "https://#{social_form.object.kind}.com/username", class: "w-full py-3 px-4 ml-3 focus:border-none autofill:bg-white" %>
      <%= social_form.text_field :kind, class: "hidden" %>
      <%= social_form.text_field :id, class: "hidden" %>
    </div>
  <% end %>
  <p class="text-xs text-gray-400">Copy and paste your social media accounts</p>
  <div class="w-full mt-48 text-right actions">
    <%= link_to "Cancel", wizard_path(:final), class: "text-black text-white text-blue-500 hover:bg-blue-500 hover:text-white lg:px-4 py-2 rounded-md text-sm font-medium" %>
    <%= f.submit "Save", class: "text-black text-white lg:bg-blue-500 hover:bg-blue-700 lg:px-4 py-2 rounded-md text-sm font-medium" %>
  </div>
<% end %>
