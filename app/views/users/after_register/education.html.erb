<div class="pb-10">
  <h1 class="text-xl md:text-2xl font-bold leading-tight mt-8 text-center">Where did you learn to do hair?</h1>
</div>
<%= form_for(@user, :url => wizard_path, :method => :put) do |f| %>
  <%= render "devise/shared/error_messages", resource: @user %>
  <div class="flex flex-col md:flex-row md:inline-flex md:items-center w-full">
    <%= f.text_field :education, autofocus: true, placeholder: "i.e. Vancouver Hair Academy", class: "px-4 py-3 w-full rounded-lg mt-2 border focus:border-gray-500 focus:outline-none autofill:bg-white" %>
  </div>
  <div class="actions w-full text-right mt-48">
    <%= link_to "Cancel", wizard_path(:final), class: "text-black text-white text-blue-500 hover:bg-blue-500 hover:text-white lg:px-4 py-2 rounded-md text-sm font-medium" %>
    <%= f.submit "Save", class: "text-black text-white lg:bg-blue-500 hover:bg-blue-700 lg:px-4 py-2 rounded-md text-sm font-medium" %>
  </div>
<% end %>
