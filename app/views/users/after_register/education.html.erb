<div class="pb-10">
  <h1 class="mt-8 text-xl font-bold leading-tight text-center md:text-2xl">Where did you learn to do hair?</h1>
</div>
<%= form_for(@user, :url => wizard_path, html: {method: :put, class: "h-full md:h-96 flex flex-wrap content-between"}) do |f| %>
  <%= render "devise/shared/error_messages", resource: @user %>
  <div class="flex flex-col w-full md:inline-flex md:flex-row md:items-center">
    <%= f.text_field :education, autofocus: true, placeholder: "i.e. Vancouver Hair Academy", class: "px-4 py-3 w-full rounded-lg mt-2 border focus:border-gray-500 focus:outline-none autofill:bg-white" %>
  </div>
  <div class="w-full text-right actions">
    <%= link_to "Cancel", wizard_path(:final), class: "text-black text-blue-500 px-4 py-2 rounded-md md:text-sm text-xs font-medium" %>
    <%= f.submit "Save", class: "text-black text-white bg-blue-500 hover:bg-blue-700 px-4 py-2 rounded-md text-sm font-medium" %>
  </div>
<% end %>
