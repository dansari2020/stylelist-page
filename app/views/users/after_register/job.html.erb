<style>
  input:checked + label {
  	border: 1px solid #3374DE;
    position: relative;
  }
  input[type="radio"] + label span {
    display: inline-block;
    vertical-align: middle;
    width: 45px;
    height: 45px;
    position: absolute;
    top:5px;
    left:5px;
  }
  input[type="radio"]:checked + label span {
    background: url('<%= image_url("icons/checkbox-radio-sprite.png") %>') top left no-repeat;
  }
</style>
<div class="pb-10">
  <h1 class="text-xl md:text-2xl font-bold leading-tight mt-8 text-center">Which best describes you</h1>
  <p class="text-sm text-center">Step 2 of 4</p>
</div>
<%= form_for(@user, :url => wizard_path, :method => :put) do |f| %>
  <div class="flex flex-col md:flex-row">
    <%= f.radio_button :role, "barber", checked: true, class: "hidden" %>
    <label for="user_role_barber" class="md:w-1/2 mb-6 py-12 mr-2 text-center border border-gray-200 rounded-lg focus:border-blue-200">
      <span class=""></span>
      Barber
    </label>
    <%= f.radio_button :role, "hair_stylist", class: "hidden" %>
    <label for="user_role_hair_stylist" class="md:w-1/2 mb-6 py-12 ml-2 text-center border border-gray-200 rounded-lg focus:border-blue-200">
      <span class=""></span>
      Hair Stylist
    </label>
  </div>
  <div class="actions w-full text-right mt-24">
    <%= f.submit "Next", class: "text-black text-white lg:bg-blue-500 hover:bg-blue-700 lg:px-4 py-2 rounded-md text-sm font-medium" %>
  </div>
<% end %>
