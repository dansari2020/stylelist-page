<% # link_to "Fake Twitter Connect", next_wizard_path, :class => 'btn btn-primary' %>
<% #link_to 'skip' , next_wizard_path %>
<div class="md:pb-10">
  <h1 class="mt-8 text-xl font-bold leading-tight text-center md:text-2xl">Let clients know about you</h1>
  <p class="text-sm text-center">Step 4 of 4</p>
</div>
<%= form_for(@user, :url => wizard_path, html: {method: :put, class: "h-full md:h-96 flex flex-col"}) do |f| %>
  <div class="flex-1">
    <%= render "devise/shared/error_messages", resource: @user %>
    <div class="flex flex-row items-center mb-4 w-full">
      <%= link_to wizard_path(:specialties), class: "w-1/2 border border-gray-200 hover:border-blue-500 p-2 mr-2" do %>
        <div class="flex justify-between mb-4">
          <%= image_tag "icons/speciality.svg", class: "h-5" %>
          <% if @user.has_specialties? %>
            <%= image_tag "icons/checked-checkbox.svg", class: "h-5" %>
          <% else %>
            <%= image_tag "icons/empty-checkbox.svg", class: "h-5" %>
          <% end %>
        </div>
        Your specialties
      <% end %>
      <%= link_to wizard_path(:services), class: "w-1/2 border border-gray-200 hover:border-blue-500 p-2 ml-2" do %>
        <div class="flex justify-between mb-4">
          <%= image_tag "icons/services.svg", class: "h-5" %>
          <% if @user.has_services? %>
            <%= image_tag "icons/checked-checkbox.svg", class: "h-5" %>
          <% else %>
            <%= image_tag "icons/empty-checkbox.svg", class: "h-5" %>
          <% end %>
        </div>
        Services you offer
      <% end %>
    </div>
    <div class="flex flex-row items-center mb-4 w-full">
      <%= link_to wizard_path(:bio), class: "w-1/2 border border-gray-200 hover:border-blue-500 p-2 mr-2" do %>
        <div class="flex justify-between mb-4">
          <%= image_tag "icons/bio.svg", class: "h-5" %>
          <% if @user.has_bio? %>
            <%= image_tag "icons/checked-checkbox.svg", class: "h-5" %>
          <% else %>
            <%= image_tag "icons/empty-checkbox.svg", class: "h-5" %>
          <% end %>
        </div>
        Your biography
      <% end %>
      <%= link_to wizard_path(:education), class: "w-1/2 border border-gray-200 hover:border-blue-500 p-2 ml-2" do %>
        <div class="flex justify-between mb-4">
          <%= image_tag "icons/education.svg", class: "h-5" %>
          <% if @user.has_education? %>
            <%= image_tag "icons/checked-checkbox.svg", class: "h-5" %>
          <% else %>
            <%= image_tag "icons/empty-checkbox.svg", class: "h-5" %>
          <% end %>
        </div>
        Your education
      <% end %>
    </div>
    <div class="flex flex-row items-center mb-4 w-full">
      <%= link_to wizard_path(:experience), class: "w-1/2 border border-gray-200 hover:border-blue-500 p-2 mr-2" do %>
        <div class="flex justify-between mb-4">
          <%= image_tag "icons/calendar.svg", class: "h-5" %>
          <% if @user.has_started_at? %>
            <%= image_tag "icons/checked-checkbox.svg", class: "h-5" %>
          <% else %>
            <%= image_tag "icons/empty-checkbox.svg", class: "h-5" %>
          <% end %>
        </div>
        Years of Experience
      <% end %>
      <%= link_to wizard_path(:social_media), class: "w-1/2 border border-gray-200 hover:border-blue-500 p-2 ml-2" do %>
        <div class="flex justify-between mb-4">
          <%= image_tag "icons/social.svg", class: "h-5" %>
          <% if @user.has_social_media? %>
            <%= image_tag "icons/checked-checkbox.svg", class: "h-5" %>
          <% else %>
            <%= image_tag "icons/empty-checkbox.svg", class: "h-5" %>
          <% end %>
        </div>
        Social Media
      <% end %>
    </div>
    <p class="mt-2 text-xs text-center text-gray-400">This information will populate your profile tab</p>
  </div>
  <div class="w-full actions">
    <%= f.submit "Save", class: "w-full text-blue-500 bg-white hover:text-white hover:bg-blue-500 border border-blue-500 lg:px-4 py-2 rounded-full text-sm font-medium" %>
  </div>
<% end %>
