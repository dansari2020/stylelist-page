<div class="flex flex-col justify-center">
  <div class="flex flex-col p-4">
    <h1 class="font-bold leading-tight text-center md:text-left text-lg">Change Name</h1>
    <div class="mt-4 mb-2">
      <%= f.text_field :first_name, autofocus: true, placeholder: "First Name", autocomplete: "first_name", class: "w-full px-4 py-3 rounded-lg mt-2 border focus:border-gray-500 focus:outline-none autofill:bg-white", ":disabled": "submenu !== 'name'" %>
    </div>
    <div class="mb-8">
      <%= f.text_field :last_name, placeholder: "Last Name", autocomplete: "last_name", class: "w-full px-4 py-3 rounded-lg mt-2 border focus:border-gray-500 focus:outline-none autofill:bg-white", ":disabled": "submenu !== 'name'" %>
    </div>
    <div class="mb-4">
      <%= f.text_field :pronoun, placeholder: "Pronoun (Optional)", autocomplete: "pronoun", class: "w-full px-4 py-3 rounded-lg mt-2 border focus:border-gray-500 focus:outline-none autofill:bg-white", ":disabled": "submenu !== 'name'" %>
      <p class="mt-2 text-sm text-gray-500">Let others know how to refer to you.</p>
    </div>
  </div>
</div>
<input type="hidden" name="from_url" value="<%= settings_path(tab: "profile", submenu: "name") %>" :disabled="submenu !== 'name'">
