<%= turbo_frame_tag "specialty" do %>
  <div id="view_specialties" class="flex justify-between w-full">
    <div class="flex-1">
      <h2 class="pb-2 leading-3 roboto-font font-medium text-xs">Specialties</h2>
      <p class="leading-2 roboto-font font-light text-sm">
        <%= render 'specialties/index', specialties: user.specialties %>
      </p>
    </div>
    <div class="flex items-start">
      <% if local_assigns[:editable].present? %>
        <%= link_to "Edit", profile_edit_path("specialty"), class: "roboto-font text-blue-500 text-2xs font-normal" %>
      <% end %>
    </div>
  </div>
<% end %>
