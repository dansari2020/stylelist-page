<%= turbo_frame_tag "language" do %>
  <div class="w-full">
    <div id="view_languages" class="flex justify-between w-full">
      <div class="flex-1">
        <h2 class="pb-2 leading-3 roboto-font font-medium text-xs">Spoken Languages</h2>
        <p class="leading-2 roboto-font font-light text-sm">
          <% if user.has_languages? %>
            <ul class="flex flex-wrap">
              <% user.languages.order(:name).each do |language| %>
                <li class="mt-2 mr-2">
                  <span class="block px-3 py-1 border border-gray-200 rounded-full roboto-font font-light text-sm sub-title-color">
                    <%= language.name %>
                  </span>
                </li>
              <% end %>
            </ul>
          <% else %>
            <span class="sub-title-color">What languages do you provide services in?</span>
          <% end %>
        </p>
      </div>
      <div class="flex items-start">
      <% if local_assigns[:editable].present? %>
        <%= link_to "Edit", profile_edit_path("language"), class: "roboto-font text-blue-500 text-2xs font-normal" %>
      <% end %>
      </div>
    </div>
  </div>
<% end %>
