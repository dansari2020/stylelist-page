<%= turbo_frame_tag "promo" do %>
  <% if user.client_incentives.present? %>
    <p class="text-xs text-center text-red-500 md:text-sm"><%= user.client_incentives %></p>
    <p class="text-xs text-center text-gray-600 md:text-sm"><%= user.condition_for_incenrive %></p>
    <%= link_to "Edit", profile_edit_path("promo"), class: "text-blue-500 text-center block text-xs md:text-sm" %>
  <% else %>
    <p class="text-xs text-gray-500 md:text-sm">Client Promo</p>
    <%= link_to "Add Promo", profile_edit_path("promo"), class: "text-blue-500 text-xs md:text-sm" %>
  <% end %>
<% end %>
