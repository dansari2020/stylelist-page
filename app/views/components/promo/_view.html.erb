<%= turbo_frame_tag "promo" do %>
  <% if user.has_promo? %>
    <p class="text-xs text-center text-red-500 md:text-sm roboto-font font-light text-sm"><%= user.client_incentives %></p>
    <p class="text-xs italic text-center text-gray-600 md:text-sm roboto-font font-light text-sm"><%= user.condition_for_incenrive %></p>
    <%= link_to "Edit", profile_edit_path("promo"), class: "text-blue-500 pb-2 text-sm w-full text-right md:text-center absolute top-0 right-0 md:relative md:top-auto md:right:auto mt-2 mr-3 md:block md:items-start md:mr-0 md:mt-0 roboto-font font-light text-sm #{" hidden" if !user.has_promo? }" %>
  <% else %>
    <p class="text-xs text-gray-500 md:text-sm roboto-font font-light text-sm">Client Promo</p>
    <%= link_to "Add Promo", profile_edit_path("promo"), class: "text-blue-500 text-xs md:text-sm" %>
  <% end %>
<% end %>
