<%= content_for(:page_title) do %>
  <%= "#{@user.full_name} - Salon House - #{@user.job}" %>
<% end %>
<%= content_for(:head) do %>
  <% @avatar = Rails.application.routes.url_helpers.rails_blob_url(@user.avatar) if @user.avatar.attached? %>
  <% set_meta_tags title: "Salon House",
                 description: "#{@user.full_name} - Salon House - #{@user.job}",
                 keywords: "Hairstyle, barbershop" %>
  <meta content="Salon House" property="og:site_name">
  <meta property="og:url"                content="<%= @user.url %>" />
  <meta property="og:type"               content="website" />
  <meta property="og:title"              content="<%= @user.full_name %> - Salon House - <%= @user.job %>" />
  <meta property="og:description"        content="<%= @user.bio %>" />
  <meta property="og:image"              content="<%= @avatar %>" />
  <meta name="twitter:title" content="<%= @user.full_name %> - Salon House - <%= @user.job %>">
  <meta name="twitter:description" content="<%= @user.bio %>">
  <meta name="twitter:image" content="<%= @avatar %>">
  <meta name="twitter:card" content="summary_large_image">
  <meta property="og:site_name" content="Salon House">
  <meta name="twitter:image:alt" content="Salon House">
  <meta property="fb:app_id" content="<%= ENV["FB_APP_ID"] %>" />
  <meta name="twitter:site" content="<%= ENV["TWITTER_SITE_NAME"] %>">
<% end %>
<%= render partial: "shared/handle", locals: {user: @user, editable: @editable} %>
