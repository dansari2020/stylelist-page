<div class="py-2">
  <h1 class="text-normal">When did you start doing hair?</h1>
</div>
<%= form_for(user, url: url, html: {method: :put, id: id}) do |f| %>
  <%= render "devise/shared/error_messages", resource: user %>
  <div class="flex flex-col-reverse w-full">
    <%= f.date_select :started_at, { discard_day: true, default: { day: 1 }, start_year: 1960, end_year: Date.today.year }, autofocus: true, class: "px-4 py-3 w-full rounded-lg mt-2 border focus:border-gray-500 focus:outline-none autofill:bg-white" %>
  </div>
  <input type="hidden" name="from_url" value="<%= from_url %>">
<% end %>
