<style>
  input:checked + label {
  	border: 1px solid #3374DE;
    position: relative;
  }
  input[type="radio"] + label span {
    display: inline-block;
    vertical-align: middle;
    width: 45px;
    height: 45px;
    position: absolute;
    top:5px;
    left:5px;
  }
  input[type="radio"]:checked + label span {
    background: url('<%= image_url("icons/checkbox-radio-sprite.svg") %>') top left no-repeat;
  }
</style>
<div class="py-2">
  <h1 class="text-normal">Which best describes you</h1>
</div>
<%= form_for(user, url: url, html: {method: :put, id: id}) do |f| %>
  <%= render "devise/shared/error_messages", resource: user %>
  <div class="flex flex-col md:flex-row">
    <%= f.radio_button :role, "barber", checked: true, class: "hidden" %>
    <label for="user_role_barber" class="py-12 mb-6 mr-2 text-center border border-gray-200 rounded-lg md:w-1/2 focus:border-blue-200">
      <span class=""></span>
      Barber
    </label>
    <%= f.radio_button :role, "hair_stylist", class: "hidden" %>
    <label for="user_role_hair_stylist" class="py-12 mb-6 ml-2 text-center border border-gray-200 rounded-lg md:w-1/2 focus:border-blue-200">
      <span class=""></span>
      Hair Stylist
    </label>
  </div>
  <input type="hidden" name="from_url" value="<%= from_url %>">
<% end %>
