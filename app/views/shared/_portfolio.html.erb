<% if current_user.portfolios.empty? %>
  <div class="flex items-center min-h-full">
    <div class="py-12 mx-auto">
      <p class="mb-4 text-sm text-center text-gray-500">
        Your portfolio is empty
      </p>
      <%= link_to "Upload Your First Photo", "#", class: "bg-white text-indigo-500 border border-indigo-500 hover:text-white hover:bg-indigo-500 px-4 py-2 rounded-md" %>
    </div>
  </div>
<% else %>
  <div class="grid grid-cols-3 gap-4 md:grid-cols-4">
    <% current_user.portfolios.with_attached_pictures.each do |p| %>
      <% p.pictures.each do |p| %>
        <div>
          <%= image_tag p %>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
