<% if user_signed_in? && current_user.confirmed? && current_user.completed? %>
  <%= link_to root_url, class: "text-xs md:text-sm text-center text-gray-500 hover:text-blue-500 px-2 #{ "text-blue-500" if controller_name == "home"}" do %>
    <% if controller_name == "home" %>
      <%= image_tag "icons/portfolio-active.svg", class: "w-5 h-5 mx-auto" %>
    <% else %>
      <%= image_tag "icons/portfolio.svg", class: "w-5 h-5 mx-auto" %>
    <% end %>
    Portfolio
  <% end %>
  <%= link_to new_portfolio_path, class: "text-xs md:text-sm text-center text-gray-500 hover:text-blue-500 px-2 #{ "text-blue-500" if controller_name == "portfolios"}" do %>
    <% if controller_name == "portfolios" %>
      <%= image_tag "icons/plus-active.svg", class: "w-5 h-5 mx-auto" %>
    <% else %>
      <%= image_tag "icons/plus.svg", class: "w-5 h-5 mx-auto" %>
    <% end %>
    Upload
  <% end %>
  <%= link_to settings_path, class: "text-xs md:text-sm text-center text-gray-500 hover:text-blue-500 px-2 #{ "text-blue-500" if controller_name == "users"}" do %>
    <% if controller_name == "users" %>
      <%= image_tag "icons/setting-active.svg", class: "w-5 h-5 mx-auto" %>
    <% else %>
      <%= image_tag "icons/setting.svg", class: "w-5 h-5 mx-auto" %>
    <% end %>
    Settings
  <% end %>
<% end %>
