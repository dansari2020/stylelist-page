<div class="flex flex-wrap content-center w-full bg-center bg-no-repeat bg-cover md:rounded-lg" style="height: 200px; background-color: #4F4F4E; <%=  "background-image: url(#{url_for(user.background)})" if user.background.attached? %>">
  <%= render partial: "shared/background_profile", locals: {user: user} %>
</div>
<div class="p-4">
  <div class="relative flex flex-row w-full">
    <!-- Avatar -->
    <div class="w-1/3">
      <%= render partial: "shared/avatar_profile", locals: {user: user} %>
      <div class="justify-center w-full py-2 mb-12 ml-3">
        <h2 class="text-xl leading-6">
          <%= user.full_name %><span class="pl-2 text-gray-500"><%= "(#{user.pronoun})" if user.pronoun.present? %></h2>
        </h2>
        <p class="text-sm font-medium leading-5 text-gray-500"><%= user.job %></p>
        <p class="text-sm font-medium leading-5 text-gray-500"><%= user.short_address %></p>
      </div>
    </div>
    <!-- Follow Button -->
    <div class="flex flex-col w-2/3 -mt-8 -mr-4 text-right md:-mt-0">
      <button class="flex items-center justify-center px-2 py-2 ml-auto mr-0 text-sm text-right text-black bg-transparent rounded-md md:px-4 md:font-bold md:text-md max-w-max whitespace-nowrap hover:bg-yellow-500 hover:shadow-lg bg-yellow-light max-h-max" x-show="tab !== 'contact'">
        <%= image_tag "icons/share.svg", class: "w-4 mr-2" %>
        Share
      </button>
      <div x-show="tab === 'contact'">
        <div x-data="{ edit : false }">
          <div x-show="!edit">
            <% if user.client_incentives.present? %>
              <p class="text-sm text-center text-red-500"><%= user.client_incentives %></p>
              <p class="text-sm text-center text-gray-600"><%= user.condition_for_incenrive %></p>
              <%= link_to "Edit", "#", class: "text-blue-500 text-center block text-sm", "@click.prevent": "edit = true" %>
            <% else %>
              <p class="text-gray-500">Client Promo</p>
              <%= link_to "Add Promo", "#", class: "text-blue-500 text-sm", "@click.prevent": "edit = true" %>
            <% end %>
          </div>
          <div id="edit_promo" x-show="edit" class="p-2 ml-8 text-left bg-gray-100">
            <% promo_form = dom_id(current_user, "promo") %>
            <%= render partial: "shared/forms/promo", locals: {user: current_user, url: profile_users_path, from_url: root_url, id: promo_form} %>
            <div class="pt-4 pb-2 text-right actions">
              <%= link_to "Cancel", "#", class: "text-gray-500 hover:bg-gray-500 hover:text-white lg:px-4 py-2 rounded-md text-sm font-medium", "@click.prevent": "edit = false" %>
              <%= submit_tag "Save", form: promo_form, class: "bg-blue-500 text-white hover:bg-blue-700 px-4 py-2 rounded-md text-sm font-medium" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= render partial: "shared/profile_section", locals: {user: user} %>
  <%= render partial: "shared/contact_section", locals: {user: user} %>
</div>
