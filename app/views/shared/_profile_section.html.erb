<ul class="mb-20 list-none" x-show="tab === 'profile'">
  <li>
    <div class="flex justify-center w-full py-4 mt-3 border-t border-b border-gray-200" x-data="{ edit : false }">
      <div id="view_bio" class="flex justify-between w-full" x-show="!edit">
        <div>
          <h2 class="pb-4 leading-3 text-normal">Bio</h2>
          <p class="text-sm font-medium text-gray-400 leading-2">Describe who you are</p>
        </div>
        <div class="flex items-center">
          <%= link_to "Edit", "#", class: "text-blue-500 text-sm", "@click.prevent": "edit = true" %>
        </div>
      </div>
      <div id="edit_bio" x-show="edit" class="w-full p-2 bg-gray-200">
        <%= render partial: "shared/forms/bio", locals: {user: current_user, url: profile_users_path(current_user)} %>
      </div>
    </div>
  </li>
