<ul class="mt-3 mb-20 space-y-3 list-none" x-show="tab === 'contact'">
  <li class="p-2 border-r border-l border-t border-b border-gray-200 rounded-md md:rounded-none md:py-4 md:mt-3 md:border-l-0 md:border-r-0">
    <%= turbo_stream_from "phone" %>
    <%= render partial: "components/phone/view", locals: {user: user, editable: editable} %>
  </li>
  <li class="p-2 border-r border-l border-t border-b border-gray-200 rounded-md md:rounded-none md:py-4 md:border-l-0 md:border-r-0 md:border-t-0">
    <%= turbo_stream_from "language" %>
    <%= render partial: "components/language/view", locals: {user: user, editable: editable} %>
  </li>
  <li class="p-2 border-r border-l border-t border-b border-gray-200 rounded-md md:rounded-none md:py-4 md:border-l-0 md:border-r-0 md:border-t-0">
    <%= render partial: "addresses/address", locals: { address: user.address || user.build_address, user: current_user } %>
  </li>
  <li class="p-2 border-r border-l border-t border-b border-gray-200 rounded-md md:rounded-none md:pt-4 md:border-t-0 md:border-l-0 md:border-r-0">
    <%= turbo_stream_from "availability" %>
    <%= render partial: "components/availability/view", locals: {user: user, editable: editable} %>
  </li>
</ul>
