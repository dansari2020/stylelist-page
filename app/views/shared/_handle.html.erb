<div id="tabsContainer" class="flex flex-col md:space-x-4 md:flex-row" x-init="init()" x-data="tabFunction()">
  <div class="border-r md:px-2 md:-mb-20 md:overflow-y-scroll md:w-1/2 lg:w-2/5 h-screen-main md-box-shadow-right">
    <div class="flex flex-row justify-center px-2 pt-4 mb-2 border-b border-blue-400 md:pt-12 md:border-gray">
      <button @click.prevent="active('portfolio')" class="block w-1/3 text-xs text-gray-600 hover:text-blue-500 focus:outline-none md:hidden" :class="{ 'text-blue-500 border-b-4 font-medium border-blue-500' : tab === 'portfolio'}">
        Portfolio
      </button>
      <button @click.prevent="active('profile')" class="block w-1/3 text-xs text-gray-600 md:text-lg md:w-1/2 md:h-10 md:mx-12 md:py-2 hover:text-blue-500 focus:outline-none" :class="{ 'text-blue-500 border-b-4 font-medium border-blue-500' : tab === 'profile'}">
        Profile
      </button>
      <button @click.prevent="active('contact')" class="block w-1/3 text-xs text-gray-600 md:text-lg md:w-1/2 md:h-10 md:mx-12 md:py-2 hover:text-blue-500 focus:outline-none" :class="{ 'text-blue-500 border-b-4 font-medium border-blue-500' : tab === 'contact'}">
        Contact
      </button>
    </div>
    <%= render partial: "shared/profile", locals: {user: user} %>
  </div>
  <div class="flex flex-col md:px-2 md:-mb-20 md:overflow-y-scroll md:w-1/2 lg:w-3/5 h-screen-main" :class="{'hidden md:flex' : tab === 'profile' || tab === 'contact' }">
    <div id="manageWrapper" class="w-full"  x-data="{ manage : false }">
      <div class="flex flex-col justify-between mb-2 <%= 'md:border-b' if !current_user.portfolios.published.present? %> md:pt-12 sm:flex-row">
        <div class="flex flex-row items-center justify-between w-full px-3 mb-1 md:px-0 actions">
          <div>
            <p class="flex-1 hidden h-10 py-2 text-xs text-gray-600 md:block md:text-lg">
              Portfolio
            </p>
            <p class="text-sm text-gray-500 md:hidden"><%= "#{current_user.portfolios.published.size} #{"Upload".pluralize(current_user.portfolios.published.size)}" %></p>
          </div>
          <div class="<%= "hidden" if !current_user.portfolios.published.present? %>">
            <button class="px-4 py-2 text-sm font-medium text-blue-500 border border-blue-500 rounded-md hover:text-white hover:bg-blue-500"  x-show="!manage" @click.prevent="manage = !manage">Manage</button>
            <%= link_to "Cancel", "#", class: "text-gray-500 hover:bg-gray-500 hover:text-white px-4 py-2 rounded-md text-sm font-medium", "x-show": "manage", "@click.prevent": "manage = !manage" %>
            <%= submit_tag "Delete", form: "portfolio_pictures", class: "text-red-500 bg-white border border-red-500 hover:text-white hover:bg-red-500 px-4 py-2 rounded-md text-sm font-medium", "x-show": "manage" %>
          </div>
        </div>
      </div>
      <%= render partial: "shared/portfolio", locals: {user: user, id: "portfolio_pictures"} %>
    </div>
  </div>
</div>
<script>
  function tabFunction() {
    return {
      tab: 'profile',
      init() {
        var w = window.innerWidth;
        if (w <= 767) {
          this.tab = 'portfolio';
        }
        window.activeTab = this.tab
      },
      active(tab) {
        this.tab = tab;
        window.activeTab = this.tab;
      }
    }
  }
</script>
